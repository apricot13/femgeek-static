<div class="postslist">
{% for post in postslist | reverse %}

  <div class="post{% if post.url == url %} post--active{% endif %}">

    <div class="post__top">
    <h2 class="post__title">
      <a href="{{ post.url | url }}" class="post__link">
        {% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}
      </a>
    </h2>

     <time class="post__date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>

          
</div>

{% set absolutePostUrl %}{{ post.url | url | absoluteUrl(metadata.url) }}{% endset %}
{{ post.templateContent | htmlToAbsoluteUrls(absolutePostUrl) | safe }}


{# {{ post.templateContent | safe }} #}

    {% if post.data.description %}
      <p class="post__description">{{ post.data.description }}</p>
    {% endif %}

